<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cloud">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="412dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

    <ImageView
        android:id="@+id/callButton"
        style="@style/homeButtonDimens"
        app:tint="@color/flamingo"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_homescreenbutton"/>

    <ImageView
        android:id="@+id/callIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/callButton"
        app:layout_constraintTop_toTopOf="@+id/callButton"
        app:srcCompat="@drawable/ic_call"
        app:tint="@color/cloud" />

    <TextView
        android:id="@+id/callText"
        style="@style/homeButtonText"
        android:text="@string/call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/callButton"
        app:layout_constraintTop_toBottomOf="@+id/callIcon" />


    <ImageView
        android:id="@+id/textButton"
        style="@style/homeButtonDimens"
        app:tint="@color/iris_10"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/callButton"
        app:srcCompat="@drawable/ic_homescreenbutton" />

    <ImageView
        android:id="@+id/textIcon"
        app:tint="@color/iris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/textButton"
        app:layout_constraintTop_toTopOf="@+id/textButton"
        app:srcCompat="@drawable/ic_text" />

    <TextView
        android:id="@+id/textText"
        style="@style/homeButtonText"
        android:text="@string/text"
        android:textColor="@color/iris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textButton"
        app:layout_constraintTop_toBottomOf="@+id/textIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>